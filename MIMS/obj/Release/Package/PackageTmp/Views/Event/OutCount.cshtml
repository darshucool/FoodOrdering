@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuCategory
@using Dinota.Domain.EventCount
@using AlfasiWeb.Models
@model EventCount
@{
    ViewBag.Title = "MenuOrderList";
    Layout = "~/Views/Shared/_LayoutEvent.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Out Count</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <div class="rounded shadow-sm p-4 bg-white">
                <h5 class="mb-4" style="float:right"><a href="@Url.Content("~/Event/AddCount")" class="btn-info" style="padding:10px;background-color:#d56a6a"> In Count</a></h5>

                <h5 class="mb-4">Out Count</h5>
                <div id="edit_profile">
                    <div>
                        @Html.Message()
                        @using (Html.BeginForm("OutCount", "Event", null, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label for="exampleInputName1">Count</label>
                                @Html.TextBoxFor(m => m.Count, new { @placeholder = "Enter Count", @data_rule_required = "true", @type = "number", @class = "form-control", @aria_required = "true" })
                                @Html.ValidationMessageFor(m => m.Count, "")

                            </div>


                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
