@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.User
@using Dinota.Domain.MenuOrderOfficer
@using AlfasiWeb.Models
@model OfficerMenuOrderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Room Information Edit</h4>
    </div>
</div>
<div class="container position-relative">
    <br/>
    @Html.Message()
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <a href="@Url.Content("~/Order/MenuCreate/")@Model.MenuOrderId" class="btn btn-primary px-3" style="float: right">Back to Order Detail</a>
            <table class="table table-striped table-bordered" style="width: 100%">
                <thead>
                <tr>
                    <th>Service No</th>
                    <th>Rank</th>
                    <th>Name</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (MenuOrderOfficer info in Model.MenuOrderOfficerList)
                {
                    <tr>
                        <td>@info.UserBase.UserName</td>
                        <td>
                            @if (info.UserBase.Rank != null)
                            {
                                @info.UserBase.Rank.Name
                            }

                        </td>
                        <td>@info.UserBase.Name</td>
                        <td><a href="@Url.Content("~/Order/RemoveOfficer?OfficerId=" + info.UId + "&&OrderId=" + Model.MenuOrderId + "")" class="btn btn-primary px-3">Remove</a></td>

                    </tr>
                }
                </tbody>
            </table>

            <div class="text-center">

                <br/><br/>
            </div>
            <a href="@Url.Content("~/Order/AddOfficerLivingInStatus/" + Model.MenuOrderId + "")" class="btn btn-primary px-3">Add Living In Officer List</a>

            <table id="example" class="table table-striped table-bordered" style="width: 100%">
                <thead>
                <tr>
                    <th>Service No</th>
                    <th>Rank</th>
                    <th>Name</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (UserBase info in Model.UserAccountList)
                {
                    <tr>
                        <td>@info.UserName</td>
                        <td>
                            @if (info.Rank != null)
                            {
                                @info.Rank.Name
                            }

                        </td>
                        <td>@info.Name</td>

                        <td><a href="@Url.Content("~/Order/AddOfficer?OfficerId=" + info.Id + "&&OrderId=" + Model.MenuOrderId + "")" class="btn btn-primary px-3">Add Officer</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>