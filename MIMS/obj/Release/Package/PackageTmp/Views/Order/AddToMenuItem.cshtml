@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuItem
@using Dinota.Domain.MenuOption
@using Dinota.Domain.MenuMultiOption
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model OfficerMenuOrderModel
@{
    ViewBag.Title = "MenuOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Make Order </h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 row">
        <div class="col-md-12 mb-3">
            <div>
                <div class="osahan-cart-item mb-3 rounded shadow-sm bg-white overflow-hidden">
                    <div class="osahan-cart-item-profile bg-white p-3">
                        <div class="d-flex flex-column">

                            <div class="row">
                                <div class="col-md-3">&nbsp;</div>
                                <div class="col-md-6 " style="background-color:#e3e3e3 !important; padding: 10px;">
                                    <h6 class="mb-3 font-weight-bold">Ingredient name : @Model.IngredientInfo.ItemName</h6>
                                    @using (Html.BeginForm("AddToMenuItem", "Order", new { id = Model.MenuOrderId }, FormMethod.Post))
                                    {
                                <div class="recepie-body">
                                    @Html.HiddenFor(m=>m.IngredientInfo.UId)
                                    @Html.HiddenFor(m => m.MenuOrderId)
                                    @Html.HiddenFor(m => m.MenuItemId)
                                    <h6 class="font-weight-bold mt-4">QUANTITY</h6>
                                    <div class=" border-bottom py-2">
                                        <div class="row">
                                            <div class="col-md-8 col-sm-7  col-xs-7">
                                                <input type="text" name="menucount" value="1" id="menucount" onkeypress="return isNumberKey(this, event);" class="form-control" required>
                                            </div>
                                            <div class="col-md-3 col-sm-4 col-xs-4"> <span style="float:left">(<b>@Model.IngredientInfo.MeasurementUnit.Unit</b>)</span></div>
                                        </div>



                                    </div>
                                    
                                    
                                </div>
                                        <div class="modal-footer p-0 border-0">
                                            
                                            <div class="col-6 m-0 p-0">
                                                <button type="submit" value="SUBMIT" name="btnSubmit" class="btn btn-primary btn-lg btn-block">Add Ingredient to Menu Item</button>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

