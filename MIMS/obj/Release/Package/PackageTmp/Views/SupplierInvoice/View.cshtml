@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.SupplierInvoice
@using Dinota.Domain.IngredientBOC
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model SupplierInvoiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Add Ingriedients </h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">Supplier</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.Supplier.Name, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @Readonly = "" })

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">Date</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.EffectiveDate, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @Readonly = "" })

                    </div>
                </div>
                
                <hr />

            </div>

            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Unit Price</th>
                        <th>Qty</th>
                        <th>Unit of Measurment</th>
                        <th>Total</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (IngredientBOC info in Model.IngredientBOCList)
                    {
                        <tr>
                            <td>@info.IngredientInfo.ItemName</td>
                            <td>@info.Price.ToString("00.00")</td>
                            <td>@info.Qty.ToString("00.00")</td>
                            <td>@info.MeasurementUnit.Unit</td>
                            @{

                                decimal GTotal = info.Price * info.Qty;
                            }
                            <td>@GTotal.ToString("00.00")</td>


                        </tr>
                                }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">Tax</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.Tax, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "number" })
                        @Html.ValidationMessageFor(m => m.UnitPrice, "")
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">Discount</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.Discount, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "number" })
                        @Html.ValidationMessageFor(m => m.SupplierInvoice.Discount, "")
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">SubTotal</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.SubTotal, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "number" })
                        @Html.ValidationMessageFor(m => m.SupplierInvoice.SubTotal, "")
                    </div>
                </div>                
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputName1">Grand Total</label>
                        @Html.TextBoxFor(m => m.SupplierInvoice.GrandTotal, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "number" })
                        @Html.ValidationMessageFor(m => m.SupplierInvoice.GrandTotal, "")
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>