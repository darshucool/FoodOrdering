
@{
    ViewBag.Title = "Change Password Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="group_table" class="login_bk">
    <div class="content-bk">
        <h3 id="form_head">
            Change password successful</h3>
            <div class="alert alert-success">
            <strong>Warning!</strong> Your password has been changed successfully. You will be redirecting to login page.
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        setTimeout(function() { automaticLoginOff(); }, 3000);
    });

    function automaticLoginOff() {
        $.ajax({
                type: "post",
                url: "@Url.Action("LogOff", "Account")",
                success: function() {
                    window.location = "@Url.Action("Index", "Home")";
                }
            });
    }
</script>
