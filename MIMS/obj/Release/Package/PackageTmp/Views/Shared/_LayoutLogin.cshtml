@using MIMS.Helpers
@{
    LoginMenuBuilder.Setup();
    ViewBag.VersionNumber = typeof(MIMS.MvcApplication).Assembly.GetName().Version;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/Bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/qtip")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="body_bkk">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div id="header" style="margin-top:20px">
                        <div class="navbar">
                            <div class="container-narrow">
                                <a href="#">
                                    <div class="group">
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    @RenderBody()
                    <div id="footer">
                        <span class="vertion pull-left" style="margin-left: 20px;">ABC Solutions</span>
                        <span class="vertion pull-right">Version: 1.0000.1.0000</span>
                    </div>
                    <a href="#wrapper" class="hidden">Back to top</a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Bootstrap")
    @Scripts.Render("~/bundles/DatePicker")
    @Scripts.Render("~/bundles/Util")
    <script src="@Url.Content("~/Scripts/custom/qtip/jquery.qtip.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/TableSorter")
    <!--Bootstrap configuration requirement for IE8-->
    <script src="@Url.Content("~/Scripts/custom/bootstrap/respond.min.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
