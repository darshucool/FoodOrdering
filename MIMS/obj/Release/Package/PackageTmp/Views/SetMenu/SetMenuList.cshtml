@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.SetMenuHeader
@using AlfasiWeb.Models
@model List<SetMenuHeader>
@{
    ViewBag.Title = "SetMenuList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Set Menu List</h4>
    </div>
</div>
<div class="container position-relative">

    <div class="py-5 osahan-profile row">

        <center><h4>Set Menu List</h4></center>

        <div class="col-md-12 mb-3">
            <a href="@Url.Content("~/SetMenu/SetMenuRegister/")" class="btn btn-primary px-3 " style="float:right">Add New Set Menu</a>
            <div class="clearfix"></div>
            @Html.Message()
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Set Menu Name</th>
                        <th></th>

                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (SetMenuHeader ord in Model)
                    {
                        <tr>
                            <td>
                                @ord.SetMenuName
                            </td>

                            <td><a href="@Url.Content("~/SetMenu/SetMenuPackageList/")@ord.UId" class="btn btn-primary px-3">Set Menu Package</a></td>
                            @*<td>@ord.MenuItemId</td>
                            <td>@ord.MeasurementUnit.Unit</td>
                            <td><a href="@Url.Content("~/Menu/IngriedientList/")@ord.UId" class="btn btn-primary px-3">Ingredients List</a></td>
                            <td>
                                @if (ord.IsCombine)
                                {
                                    <a href="@Url.Content("~/Menu/PackageList/")@ord.UId" class="btn btn-primary px-3">Package List</a>
                                }
                            </td>*@
                            <td><a href="@Url.Content("~/SetMenu/SetMenuEdit/")@ord.UId" class="btn btn-primary px-3">Edit</a></td>

                        </tr>
                    }
                </tbody>
            </table>




        </div>
    </div>

</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
