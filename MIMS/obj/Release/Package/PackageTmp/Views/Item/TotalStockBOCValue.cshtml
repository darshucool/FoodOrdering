@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuCategory
@using Dinota.Domain.MenuItemDetail
@using AlfasiWeb.Models
@model  List<BOCTotalModel>
    @{
        ViewBag.Title = "MenuOrderList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="d-none">
        <div class="bg-primary border-bottom p-3 d-flex align-items-center">
            <a class="toggle togglew toggle-2" href="#"><span></span></a>
            <h4 class="font-weight-bold m-0 text-white">Total BOC Value</h4>
        </div>
    </div>
    <section class="py-4 osahan-main-body">
        <div class="container">
            <div class="row">

                <div class="tab-content col-md-12" id="myTabContent">
                    <div class="tab-pane fade show active" id="progress" role="tabpanel" aria-labelledby="progress-tab">
                        <div class="order-body">
                           
                            <p style="font-size:16px;"><b>Total BOC Value</p>
                            <table class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>

                                        <th>Ingridient Name</th>

                                        <th>Qty</th>
                                        <th>BOC Value</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BOCTotalModel ord in Model)
                                    {
                                        string style = "";
                                        <tr
                                            @if (ord.RemQty == 0)
                                            {
                                                 style = "style:'background-color:pink'";
                                            }
                                            @style>
                                            <td>@ord.IngredientInfo.ItemName</td>

                                            <td style="text-align:right">@ord.RemQty @ord.IngredientInfo.MeasurementUnit.Unit</td>
                                            <td style="text-align:right">
                                              Rs.  @ord.BOCValue.ToString("00.00")

                                            </td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>




                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
