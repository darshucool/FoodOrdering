@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuItemDetail
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model MenuItemDetail
@{
    ViewBag.Title = "RoomInfoRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <div class="rounded shadow-sm p-4 bg-white">
                <h5 class="mb-4">Add Ingredient</h5>
                <div id="edit_profile">
                    <div>

                        @using (Html.BeginForm("AddIngridient", "Menu", new { id = Model.MenuItemId }, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(p => p.MenuItemId)
                            @Html.HiddenFor(p => p.MenuItemMeasurementUnit)
                            <div class="form-group">
                                <label for="exampleInputName1"><b>Menu Item : </b>@TempData["MenuItem"]</label><br/>
                                <label for="exampleInputName1"><b>Menu Qty : </b>@TempData["PortionQty"]</label><br />
                                <label for="exampleInputName1"><b>Measurement Unit : </b>@TempData["MeasureUnit"]</label>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Select Ingriedient</label>
                                @Html.DropDownListFor(model => model.IngriedientUId, (IEnumerable<SelectListItem>)ViewData[MIMS.ViewDataKeys.IngredientInfoList], "-- Select Ingriedient  --", new { @class = "full-width form-control", @required = "true" })
                                @Html.ValidationMessageFor(m => m.IngriedientUId, null, new { @class = "help-inline" })                              
                            </div>
                            @*<div class="form-group">
                <label for="exampleInputName1">
                    <b>Ingridient Name : </b>@Model.IngredientInfo.ItemName
                </label>



            </div>*@
                    <div class="form-group">
                        <label for="exampleInputName1">Qty</label>
                        @Html.TextBoxFor(m => m.IngriedientQty, new { @placeholder = "Enter Qty", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true" })
                        @Html.ValidationMessageFor(m => m.IngriedientQty, "")
                        <br /><span id="ing_measure_unit"><b></b></span>
                    </div>
                           


                            if (Model.UId == 0)
                            {


                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                </div>


                            }
                            else
                            {
                                <div class="form-group">
                                    <label for="exampleInputName1">Active</label>
                                    @Html.CheckBoxFor(m => m.Active)
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                                </div>
                            }

                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



