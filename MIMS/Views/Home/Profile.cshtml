@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.User
@using AlfasiWeb.Models
@model UserAccount
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="d-none">
        <div class="bg-primary border-bottom p-3 d-flex align-items-center">
            <a class="toggle togglew toggle-2" href="#"><span></span></a>
            <h4 class="font-weight-bold m-0 text-white">My Profile</h4>
        </div>
    </div>
    <div class="container position-relative">
        <div class="py-5 osahan-profile row">
            <div class="col-md-12 mb-3">
                <div class="bg-white rounded shadow-sm sticky_sidebar overflow-hidden">
                    <a href="profile.html" class="">
                        <div class="d-flex align-items-center p-3">
                            <div class="left mr-3">
                                <img alt="#" src="@Url.Content("~/Asset/img/profile.png")" class="rounded-circle" width="50%">
                            </div>
                            <div class="right">
                                <h6 class="mb-1 font-weight-bold">
                                    @if (Model.Rank != null)
                                    {
                                        @Model.Rank.Name
                                    }
                                    &nbsp;   @Model.Name
                                </h6>
                                <p class="text-muted m-0 "><span class="__cf_email__" data-cfemail="acc5cdc1c3dfcdc4cdc2eccbc1cdc5c082cfc3c1">@Model.UserName</span></p>
                            </div>
                        </div>
                    </a>
                </div>
                <div>
                    @Html.Message()
                    @using (Html.BeginForm("UpdateProfile", "Officer", new { id=Model.Id}, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        <div><h6 class="mb-1 font-weight-bold">Existing Whatsapp Number</h6> @Model.Telephone1</div>
                        <br />
                        <div class="form-group">
                            <label for="exampleInputName1">Change Whatsapp Number (Ex:77000XXX)</label>
                            @Html.TextBoxFor(m => m.Telephone1, new { @placeholder = "Enter WhatsApp Number", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true" })
                            @Html.ValidationMessageFor(m => m.Telephone1, "")

                        </div>
                     
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
