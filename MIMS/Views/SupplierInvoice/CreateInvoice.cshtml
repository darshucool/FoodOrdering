@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.SupplierInvoice
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model SupplierInvoice
@{
    ViewBag.Title = "RoomInfoRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Add Invpice</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <div class="rounded shadow-sm p-4 bg-white">
                <h5 class="mb-4">Create Supplier Invoice</h5>
                <div id="edit_profile">
                    <div>
                        @Html.Message()
                        @using (Html.BeginForm("CreateInvoice", "SupplierInvoice", null, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <label for="exampleInputName1">Select Supplier</label>
                                @Html.DropDownListFor(model => model.SupplierUId, (IEnumerable<SelectListItem>)ViewData[MIMS.ViewDataKeys.Suppliers], "-- Select Supplier  --", new { @class = "full-width form-control", @required = "true" })
                                @Html.ValidationMessageFor(m => m.SupplierUId, null, new { @class = "help-inline" })




                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Select Date</label>
                                @Html.TextBoxFor(m => m.EffectiveDate, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true",@type="date" })
                                @Html.ValidationMessageFor(m => m.EffectiveDate, "")
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block">Next Step</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



