@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuOrderHeader
@using Dinota.Domain.MenuOrderItemDetail
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model OrdeerListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Order List</h4>
    </div>
</div>
<div class="container position-relative">
    @using (Html.BeginForm("OrderList", "Order", null, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleInputName1">Search Date</label>
                    @Html.TextBoxFor(m => m.EffectiveDate, new { @placeholder = "Enter Name", @type = "date", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "" })
                    @Html.ValidationMessageFor(m => m.EffectiveDate, "")

                </div>
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <label for="exampleInputName1">&nbsp;</label>
                    <button type="submit" class="btn btn-primary btn-block">Get Order List</button>
                </div>
            </div>
        </div>
    }
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <a href="@Url.Content("~/Order/OrderRegister/")" class="btn btn-primary px-3 " style="float:right">Add New Order</a>
            @Html.Message()
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Menu Item</th>
                        <th>Qty</th>
                        <th>Total Amount</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (MenuOrderHeaderModel info in Model.MenuOrderHeaderModelList)
                    {
                    <tr>

                        <td>@info.MenuOrderHeader.OrderDate.ToString("yyyy/MM/dd")</td>
                        <td>
                            @if (info.MenuOrderItemDetailList != null)
                            {
                                foreach (MenuOrderItemDetail det in info.MenuOrderItemDetailList)
                                {
                                    @det.MenuItem.Name<br />

                                }
                            }

                        </td>
                        <td>
                            @if (info.MenuOrderItemDetailList != null)
                            {
                                foreach (MenuOrderItemDetail det in info.MenuOrderItemDetailList)
                                {
                                    <span>@det.Qty.ToString("00")&nbsp; @det.MenuItem.MeasurementUnit.Unit</span><br />

                                }
                            }
                        </td>
                        @*<td>@info.MenuOrderHeader.Location</td>*@
                        <td style="text-align:right">
                            @if (info.F140Header != null)
                            {
                                <span> @info.TotalAmount.ToString("00.00")</span>
                            }

                        </td>


                        <td><a href="@Url.Content("~/Order/OfficerList/")@info.MenuOrderHeader.UId" class="btn btn-primary px-3">Officer List</a></td>
                        <td><a href="@Url.Content("~/Order/MenuCreate/")@info.MenuOrderHeader.UId" class="btn btn-primary px-3">Detail</a></td>
                        <td>
                            @if (info.F140Header != null)
                            {
                                <a href="@Url.Content("~/Menu/F140Detail/")@info.F140Header.UId" class="btn btn-primary px-3">F140 Detail</a>
                            }

                        </td>
                        <td>
                            @if (info.F140Header != null)
                            {
                                <a href="@Url.Content("~/Order/FinalizePayment/")@info.MenuOrderHeader.UId" class="btn btn-primary px-3">Payment</a>
                            }

                        </td>
                        <td><a href="@Url.Content("~/Order/DeleteOrder/")@info.MenuOrderHeader.UId" class=""><img src="~/Asset/img/remove.png" width="20" /></a></td>
                        @*<td class="btn_dlt_order"><img src="~/Asset/img/remove.png" width="40"   /></td>*@
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
    
        $('#example').DataTable({
        order: [[0, 'desc']],
    });
    });

</script>