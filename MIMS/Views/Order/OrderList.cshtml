@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuOrderHeader
@using Dinota.Domain.Event
@using AlfasiWeb.Models
@model List<MenuOrderHeader>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Order List</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <a href="@Url.Content("~/Order/OrderRegister/")" class="btn btn-primary px-3 " style="float:right">Add New Order</a>
            @Html.Message()
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th></th>
                        <th></th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (MenuOrderHeader info in Model)
                    {
                    <tr>

                        <td>@info.EffectiveDate.ToShortDateString()</td>
                        <td>@info.Time</td>
                        <td>@info.Location</td>
                        <td><a href="@Url.Content("~/Order/OfficerList/")@info.UId" class="btn btn-primary px-3">Officer List</a></td>
                        <td><a href="@Url.Content("~/Order/MenuCreate/")@info.UId" class="btn btn-primary px-3">Detail</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>