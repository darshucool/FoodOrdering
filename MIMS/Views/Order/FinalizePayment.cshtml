@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuItem
@using Dinota.Domain.IngredientInfo
@using Dinota.Domain.MenuOrderItemDetail
@using Dinota.Domain.MenuOrderExtraItemDetail
@using AlfasiWeb.Models
@model MenuOrderHeaderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime date = new DateTime();
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Room Information Edit</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            
            <div class="col-md-12 mb-3">
                <div class="rounded shadow-sm p-4 bg-white">
                    <h5 class="mb-4">Update Order Date</h5>
                    <div id="edit_profile">
                        <div>

                            @using (Html.BeginForm("FinalizePayment", "Order", new { id = Model.MenuOrderHeader.UId }, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <label for="exampleInputName1">Select Payment Method</label>

                                    @if (Model.PaymentInfo.UId != 0)
                                    {
                                        date = DateTime.Parse(Model.PaymentInfo.PaymentDate.ToString());


                                        @Html.TextBoxFor(m => m.PaymentInfo.PaymentDate, "{0:yyyy-MM-dd}", new { @placeholder = "Enter Date", @class = "form-control", @type = "date", @Required = "true", @value = @date.ToString("MM/dd/yyyy") })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(s => s.PaymentInfo.PaymentDate, new { @class = "form-control ", @placeholder = "Date of Birth", @type = "date" })


                                    }


                                </div>
                                <div class="form-group">
                                    <label for="exampleInputName1">Select Payment Method</label>

                                    <select name="PaymentMethodId" id="PaymentMethodId" class="form-control" Required>
                                        <option>-- Select Payment Method --</option>
                                        <option value="2">Cash</option>
                                        <option value="3">Credit Card</option>
                                        <option value="4">Cheque</option>
                                    </select>

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputName1">Payment Amount</label>

                                    @Html.TextBoxFor(s => s.PaymentInfo.PaymentAmount, new { @class = "form-control ", @placeholder = "Amount" })


                                </div>
                                <div class="form-group">
                                    <label for="exampleInputName1">Payment Reference</label>

                                    @Html.TextBoxFor(s => s.PaymentInfo.PaymentReference, new { @class = "form-control ", @placeholder = "Reference" })


                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
