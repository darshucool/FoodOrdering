@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.MenuOrderOfficer
@using Dinota.Domain.MenuOrderItemDetail
@using AlfasiWeb.Models
@model MenuOrderModel
@{
    ViewBag.Title = "MenuOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<meta http-equiv="Refresh" content="30">
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Order List</h4>
    </div>
</div>

@if (Model.PendingMenuOrderList.Count > 0)
{   
    <div>
        <audio id="audio" src="~/Asset/ding.mp3"></audio>
    </div>
}


<section class="py-4 osahan-main-body">
    <div class="container">

        <div class="row">
            @Html.Message()
            <div class="col-md-3 mb-3">
                <ul class="nav nav-tabsa custom-tabsa border-0 flex-column bg-white rounded overflow-hidden shadow-sm p-2 c-t-order" id="myTab" role="tablist">
                    <li class="nav-item border-top" role="presentation">
                        <a class="nav-link border-0 text-dark py-3 active" id="progress-tab" data-toggle="tab" href="#progress" role="tab" aria-controls="progress" aria-selected="false">
                            <i class="feather-clock mr-2 text-warning mb-0"></i> Pending
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link border-0 text-dark py-3 " id="completed-tab" data-toggle="tab" href="#completed" role="tab" aria-controls="completed" aria-selected="true">
                            <i class="feather-check mr-2 text-success mb-0"></i> Accepted
                        </a>
                    </li>

                    <li class="nav-item border-top" role="presentation">
                        <a class="nav-link border-0 text-dark py-3" id="canceled-tab" data-toggle="tab" href="#canceled" role="tab" aria-controls="canceled" aria-selected="false">
                            <i class="feather-x-circle mr-2 text-danger mb-0"></i> Cancelled
                        </a>
                    </li>

                    <li class="nav-item border-top" role="presentation">
                        <a class="nav-link border-0 text-dark py-3" id="delivered-tab" data-toggle="tab" href="#delivered" role="tab" aria-controls="delivered" aria-selected="false">
                            <i class="feather-send mr-2 text-danger mb-0"></i> Delivered
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content col-md-9" id="myTabContent">
                <div class="tab-pane fade " id="completed" role="tabpanel" aria-labelledby="completed-tab">
                    <div class="order-body">
                        <table border="1" width="100%" cellspacing="5">
                            <thead>
                                <tr>
                                    <th>Officer</th>
                                    <th>Tele No</th>
                                    <th>Menu Item</th>
                                    @*<th>Qty</th>*@
                                    <th>Qty</th>
                                    <th>Delivery Location</th>
                                    <th>Date and Time</th>
                                    <th>Remark</th>


                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (MenuDetailItemOfficerModel ord in Model.CompleteMenuOrderList)
                                {
                                <tr>
                                    @using (Html.BeginForm("MenuOrderDelivery", "Menu", new { id = ord.MenuOrderItemDetail.UId }, FormMethod.Post))
                                    {
                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @off.UserBase.UserName
                                                    @if (off.UserBase.Rank != null)
                                                    {
                                                        @off.UserBase.Rank.Name
                                                    }
                                                    @off.UserBase.Name
                                                </p>
                                            }
                                        </td>

                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @if (!string.IsNullOrEmpty(off.UserBase.Telephone1))
                                                    {
                                                        if (off.UserBase.Telephone1 != "111111")
                                                        {
                                                            @off.UserBase.Telephone1
                                                        }

                                                    }
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            <big> @ord.MenuOrderItemDetail.MenuItem.Name</big>


                                        </td>
                                        @*<td>
                                            @ord.MenuOrderItemDetail.MenuOrderHeader.OfficerCount

                                        </td>*@
                                        <td>

                                            <span> @ord.MenuOrderItemDetail.Qty @ord.MenuOrderItemDetail.MenuItem.MeasurementUnit.Unit</span>

                                        </td>
                                        <td>
                                            @ord.MenuOrderItemDetail.MenuOrderHeader.Location

                                        </td>
                                        <td>@ord.MenuOrderItemDetail.MenuOrderHeader.OrderDate.ToString("dd/MM/yyyy") @ord.MenuOrderItemDetail.MenuOrderHeader.Time</td>
                                        <td>@ord.MenuOrderItemDetail.Remark</td>


                                        <td>
                                            <div class="text-right">
                                                <button type="submit" name="btnSubmit" value="SUBMIT" class="btn btn-primary px-3">Delivered</button>
                                                <button type="button" name="btnSubmit" value="CANCEL" class="btn btn-outline-primary px-3" data-toggle="modal" data-target="#extras" onclick="AssignOrderValue(@ord.MenuOrderItemDetail.UId)">REJECT</button>
                                            </div>
                                        </td>
                                    }
                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="progress" role="tabpanel" aria-labelledby="progress-tab">
                    <div class="order-body">
                        <table border="1" width="100%" cellspacing="5">
                            <thead>
                                <tr>
                                    <th>Officer</th>
                                    <th>Tele No</th>
                                    <th>Menu Item</th>
                                    <th>Qty</th>
                                    <th>Delivery Location</th>
                                    <th>Date and Time</th>
                                    <th>Remark</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (MenuDetailItemOfficerModel ord in Model.PendingMenuOrderList)
                                {
                                    <tr>
                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @off.UserBase.UserName
                                                    @if (off.UserBase.Rank != null)
                                                    {
                                                        @off.UserBase.Rank.Name
                                                    }
                                                    @off.UserBase.Name
                                                </p>
                                            }
                                        </td>

                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @if (!string.IsNullOrEmpty(off.UserBase.Telephone1))
                                                    {
                                                        if (off.UserBase.Telephone1 != "111111")
                                                        {
                                                            @off.UserBase.Telephone1
                                                        }

                                                    }
                                                </p>
                                            }
                                        </td>

                                        @using (Html.BeginForm("MenuOrderConfirm", "Menu", new { id = ord.MenuOrderItemDetail.UId }, FormMethod.Post))
                                        {
                                            <td>
                                                <big> @ord.MenuOrderItemDetail.MenuItem.Name</big>

                                            </td>
                                            <td>

                                                <span>  @ord.MenuOrderItemDetail.Qty @ord.MenuOrderItemDetail.MenuItem.MeasurementUnit.Unit</span>

                                            </td>
                                            <td>
                                                @ord.MenuOrderItemDetail.MenuOrderHeader.Location

                                            </td>
                                            <td>@ord.MenuOrderItemDetail.MenuOrderHeader.OrderDate.ToString("dd/MM/yyyy") @ord.MenuOrderItemDetail.MenuOrderHeader.Time</td>
                                            <td>@ord.MenuOrderItemDetail.Remark</td>


                                            <td>
                                                <div class="text-right">
                                                    <button type="submit" name="btnSubmit" value="SUBMIT" class="btn btn-primary px-3">ACCEPT</button>
                                                    <button type="button" name="btnSubmit" value="CANCEL" class="btn btn-outline-primary px-3" data-toggle="modal" data-target="#extras" onclick="AssignOrderValue(@ord.MenuOrderItemDetail.UId)">REJECT</button>
                                                </div>
                                            </td>
                                        }
                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="tab-pane fade" id="canceled" role="tabpanel" aria-labelledby="canceled-tab">
                    <div class="order-body">
                        <table border="1" width="100%" cellspacing="5">
                            <thead>
                                <tr>
                                    <th>Officer</th>
                                    <th>Tele No</th>
                                    <th>Menu Item</th>
                                    <th>Qty</th>
                                    <th>Delivery Location</th>
                                    <th>Date and Time</th>
                                    <th>Remark</th>

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (MenuDetailItemOfficerModel ord in Model.CancelledMenuOrderList)
                                {
                                    <tr>
                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @off.UserBase.UserName
                                                    @if (off.UserBase.Rank != null)
                                                    {
                                                        @off.UserBase.Rank.Name
                                                    }
                                                    @off.UserBase.Name
                                                </p>
                                            }
                                        </td>

                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @if (!string.IsNullOrEmpty(off.UserBase.Telephone1))
                                                    {
                                                        if (off.UserBase.Telephone1 != "111111")
                                                        {
                                                            @off.UserBase.Telephone1
                                                        }

                                                    }
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            <big> @ord.MenuOrderItemDetail.MenuItem.Name</big>

                                        </td>
                                        <td>

                                            <span> @ord.MenuOrderItemDetail.Qty @ord.MenuOrderItemDetail.MenuItem.MeasurementUnit.Unit</span>

                                        </td>
                                        <td>
                                            @ord.MenuOrderItemDetail.MenuOrderHeader.Location

                                        </td>
                                        <td>@ord.MenuOrderItemDetail.MenuOrderHeader.OrderDate.ToString("dd/MM/yyyy") @ord.MenuOrderItemDetail.MenuOrderHeader.Time</td>
                                        <td>@ord.MenuOrderItemDetail.Remark</td>
                                    </tr>

                                }
                            </tbody>
                        </table>







                    </div>
                </div>
                <div class="tab-pane fade" id="delivered" role="tabpanel" aria-labelledby="delivered-tab">
                    <div class="order-body">
                        <table border="1" width="100%" cellspacing="5">
                            <thead>
                                <tr>
                                    <th>Officer</th>
                                    <th>Tele No</th>
                                    <th>Menu Item</th>
                                    <th>Qty</th>
                                    <th>Delivery Location</th>
                                    <th>Date and Time</th>
                                    <th>Remark</th>

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (MenuDetailItemOfficerModel ord in Model.DeliveredMenuOrderList)
                                {
                                    <tr>
                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @off.UserBase.UserName
                                                    @if (off.UserBase.Rank != null)
                                                    {
                                                        @off.UserBase.Rank.Name
                                                    }
                                                    @off.UserBase.Name
                                                </p>
                                            }
                                        </td>

                                        <td>
                                            @foreach (MenuOrderOfficer off in ord.MenuOrderOfficerList)
                                            {
                                                <p>
                                                    @if (!string.IsNullOrEmpty(off.UserBase.Telephone1))
                                                    {
                                                        if (off.UserBase.Telephone1 != "111111")
                                                        {
                                                            @off.UserBase.Telephone1
                                                        }

                                                    }
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            <big> @ord.MenuOrderItemDetail.MenuItem.Name</big>

                                        </td>
                                        <td>

                                            <span> @ord.MenuOrderItemDetail.Qty @ord.MenuOrderItemDetail.MenuItem.MeasurementUnit.Unit</span>

                                        </td>
                                        <td>
                                            @ord.MenuOrderItemDetail.MenuOrderHeader.Location

                                        </td>

                                        <td>@ord.MenuOrderItemDetail.MenuOrderHeader.OrderDate.ToString("dd/MM/yyyy") @ord.MenuOrderItemDetail.MenuOrderHeader.Time</td>
                                        <td>@ord.MenuOrderItemDetail.Remark</td>




                                    </tr>

                                }
                            </tbody>
                        </table>







                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="extras" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Extras</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CancelOrder", "Menu", null, FormMethod.Post))
            {
                <div class="modal-body">

                    <input type="hidden" name="menuorderid" id="menuorderid" />
                    <div class="recepie-body">


                        <h6 class="font-weight-bold mt-4">Reason</h6>
                        <div class="custom-control custom-radio border-bottom py-2">
                            <textarea name="reasontxt" rows="5" class="form-control"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer p-0 border-0">
                    <div class="col-6 m-0 p-0">
                        <button type="button" class="btn border-top btn-lg btn-block" data-dismiss="modal">Close</button>
                    </div>
                    <div class="col-6 m-0 p-0">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">SUBMIT</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script></script>

<script type="text/javascript">
    window.onload = function () {
        document.getElementById("audio").play();
    }
</script>

@if (TempData["WhatMsg1"] != null)
{
    string Part1 = @TempData["WhatMsg1"].ToString();
    string Part2 = @TempData["WhatMsg2"].ToString();

    <script>@Part1@Part2</script>

}

