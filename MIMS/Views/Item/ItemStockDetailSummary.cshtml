@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.BOCTransaction
@using Dinota.Domain.IngredientBOC
@using AlfasiWeb.Models
@model ItemDetailModel
@{
    ViewBag.Title = "RoomInfoRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">BOC Summary</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            <div class="rounded shadow-sm p-4 bg-white">
                <h5 class="mb-4">BOC Summary</h5>
                <div id="edit_profile">
                    <div>
                        @Html.Message()
                        @using (Html.BeginForm("ItemStockDetailSummary", "Item", null, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <label for="exampleInputName1">From Date</label>
                                @Html.TextBoxFor(m => m.FromDate, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "date" })
                                @Html.ValidationMessageFor(m => m.FromDate, "")
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">To Date</label>
                                @Html.TextBoxFor(m => m.ToDate, new { @placeholder = "Enter Address", @data_rule_required = "true", @data_rule_email = "true", @class = "form-control", @aria_required = "true", @Required = "true", @type = "date" })
                                @Html.ValidationMessageFor(m => m.ToDate, "")
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.IngridientId, (IEnumerable<SelectListItem>)ViewData[MIMS.ViewDataKeys.IngredientInfoList], "-- Select Ingridient  --", new { @class = "full-width form-control", @required = "true" })
                                @Html.ValidationMessageFor(m => m.IngridientId, null, new { @class = "help-inline" })

                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>

                            //<input type="hidden" value="@TempData["FromDate"]" name="FromaDate" />
                        }
                    </div>
                    @if (Model.StockSummaryModel != null)
                    { 
                        <div class="py-5 osahan-profile row">
                            <h5 class="font-weight-bold m-0" style="text-align:center;width:100%">
                                <center>Stock Summary (@Model.StockSummaryModel.IngredientInfo.ItemName)</center>
                            </h5>
                            <div class="col-md-12 mb-3">
                                <h6>From Date : @TempData["FromDate"]
                                    <br/>To Date : @TempData["ToDate"]
                                </h6>
                            </div>
                           
                            <hr />
                            <div class="col-md-12 mb-3">
                                @*<a href="@Url.Content("~/ItemBOC/IngredientBOCRegister/")" class="btn btn-primary px-3 " style="float:right">New BOC</a>*@
                                <h4>BOC Summary</h4>
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Qty</th>
                                            <th>Price per Unit</th>
                                            <th>Total Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (IngredientBOC info in Model.StockSummaryModel.IngredientBOCList)
                                        {
                                            <tr>
                                                <td>
                                                    @info.CreationDate.ToShortDateString()

                                                </td>
                                                <td>
                                                    @info.Qty
                                                    @if (info.MeasurementUnit != null)
                                                    {
                                                        @info.MeasurementUnit.Unit
                                                    }
                                                </td>
                                                <td>@info.Price</td>
                                                <td>@info.TotalPrice</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>


                            <div class="col-md-12 mb-3">
                                @*<a href="@Url.Content("~/ItemBOC/IngredientBOCRegister/")" class="btn btn-primary px-3 " style="float:right">New BOC</a>*@
                                <h4>Stock Issue Summary</h4>
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Before Qty</th>
                                            <th>Issue Qty</th>
                                            <th>After Qty</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (BOCTransaction info in Model.StockSummaryModel.BOCTransactionList)
                                        {
                                            <tr>
                                                <td>
                                                    @info.EffectiveDate.ToShortDateString()@*<br />@info.MenuOrderHeader.UId*@

                                                </td>
                                                <td>@info.PresentStock @info.IngredientBOC.MeasurementUnit.Unit</td>
                                                <td>@info.IssueStock @info.IngredientBOC.MeasurementUnit.Unit</td>

                                                <td>@info.RemainingStock @info.IngredientBOC.MeasurementUnit.Unit</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>
