@using MIMS
@using MIMS.Helpers
@using Dinota.Security
@using Dinota.Domain.OfficerRequest
@using Dinota.Domain.User
@using AlfasiWeb.Models
@model List<OfficerRequest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-none">
    <div class="bg-primary border-bottom p-3 d-flex align-items-center">
        <a class="toggle togglew toggle-2" href="#"><span></span></a>
        <h4 class="font-weight-bold m-0 text-white">Officer Meal Request List</h4>
    </div>
</div>
<div class="container position-relative">
    <div class="py-5 osahan-profile row">

        <div class="col-md-12 mb-3">
            @*<a href="@Url.Content("~/Officer/AddOfficerRequest/")" class="btn btn-primary px-3 " style="float:right">Add New Officer Request</a>*@
            @Html.Message()
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Service No</th>
                        <th>Rank</th>
                        <th>Name</th>
                        <th>From Date</th>
                        <th>From Meal</th>
                        <th>To Date</th>
                        <th>To Meal</th>
                        <th>Payment Method</th>
                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (OfficerRequest info in Model)
                    {
                    <tr>

                        <td>@info.UserAccount.UserName</td>
                        <td>
                            @if (info.UserAccount.Rank != null)
                            {
                                @info.UserAccount.Rank.Name
                            }
                        </td>
                        <td>@info.UserAccount.Name</td>
                        <td>@info.FromDate</td>
                        <td>@info.FromMealInfo.Name</td>
                        <td>@info.ToDate</td>
                        <td>@info.ToMealInfo.Name</td>
                        <td>@info.PaymentMethodInfo.Method</td>
                        @*<td><a href="@Url.Content("~/Officer/UpdateStatus/")@info.UId" class="">Edit</a></td>*@
                        @*<td class="btn_dlt_order"><img src="~/Asset/img/remove.png" width="40"   /></td>*@
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Asset/js/jquery-3.5.1.js"></script>
<script src="~/Asset/js/jquery.dataTables.min.js"></script>
<script src="~/Asset/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>